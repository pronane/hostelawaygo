    <TextView
        android:id="@+id/id_value"
        android:layout_width="48dp"
        android:layout_height="21dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/id_label"
        android:text="@string/id_value"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/content_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_value"
        android:layout_alignTop="@+id/content_label"
        android:text="@string/content_value"
        app:layout_constraintTop_toBottomOf="@id/id_value"
        app:layout_constraintStart_toStartOf="@id/id_value"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/navigate_to_events_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Events"
        app:layout_constraintTop_toBottomOf="@id/content_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

